# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

POST	/keywords 						controllers.IMKeywords.addKeyWords()
GET		/keywords 						controllers.IMKeywords.fetchKeyWordStore()
GET		/keywords/:groupId 				controllers.IMKeywords.fetchKeyWordsbyGroup(groupId:String)
PUT		/keywords/:storeId				controllers.IMKeywords.updateKeywordsStore(storeId:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
