# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

POST	/keywords 						controllers.IMKeywordStore.addKeywordStore()
GET		/keywords 						controllers.IMKeywordStore.fetchAllKeywordStore()
GET		/keywords/:groupId 				controllers.IMKeywordStore.fetchKeywordStorebyGroup(groupId:String)
PUT		/keywords/:storeId				controllers.IMKeywordStore.updateKeywordStore(storeId:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
